// Test integer arithmetic operations

// Addition
assert((0 + 0) == 0);
assert((1 + 2) == 3);
assert((10 + -5) == 5);
assert((-5 + -5) == -10);

// Subtraction
assert((0 - 0) == 0);
assert((10 - 5) == 5);
assert((5 - 10) == -5);
assert((-5 - 5) == -10);
assert((-5 - -5) == 0);

// Multiplication
assert((1 * 1) == 1);
assert((10 * 5) == 50);
assert((10 * -5) == -50);
assert((-10 * -5) == 50);
assert((10 * 0) == 0);

// Modulo
assert((10 % 3) == 1);
assert((10 % -3) == 1);
assert((-10 % 3) == -1);
assert((-10 % -3) == -1);
assert((12 % 3) == 0);
assert((0 % 3) == 0);

// Operator precedence
assert(2 + 3 * 4 == 14);
assert(2 * 3 + 4 == 10);
assert(10 - 2 * 3 == 4);
assert((2 + 3) * 4 == 20);
assert(10 / 2 + 3 == 8);
assert(10 / (2 + 3) == 2);
assert(10 % 3 + 2 == 3);
assert(10 % (3 + 2) == 0);
assert(1 << 2 + 1 == 8);
assert((1 << 2) + 1 == 5);
assert((1 | 2 & 3) == 3);
assert((3 ^ 2 & 1) == 3);

$println("all integer arithmetic tests passed");
