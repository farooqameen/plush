let ba = #[
    \aASCII character sequence
];
assert(ba[0] == 65);
assert(ba.len == 24);

let ba2 = #[
    \amultiline
    \aASCII
    \asequence!
];
assert(ba2.len == 23);

let ba_hex = #[\x
    FF AA
    BB CC
    DD EE
];
assert(ba_hex.len == 6);
assert(ba_hex[0] == 0xFF);
assert(ba_hex[5] == 0xEE);

let ba_bin = #[\b
    00110011
    00000000
];
assert(ba_bin.len == 2);
assert(ba_bin[0] == 0b00110011);
assert(ba_bin[1] == 0b00000000);

// You can intermix ASCII, hex and binary sequences
let ba_mix = #[
    \b
    00110011
    00000000
    \x
    FF AA BB CC
    DD EE BB AA
    \aASCII data
];
assert(ba_mix.len == 20);
